{% extends 'base.html.twig' %}
    {% block body %}
        <div class="container-fluid">
            <h1>Vos prochains RDV</h1>
            <small>Voir sur une carte</small>
            <div class="rdv-list d-flex align-items-center flex-column flex-fill">
                {% for rdv in rdvs %}
                    <div class="card border-secondary mb-3" style="max-width: 18rem;">
                        <div class="card-body">
                            <h4 class="card-title">{{ rdv.patient.firstName }} {{ rdv.patient.lastName }}</h4>
                            <p class="card-text">{{ rdv.adress }}</p>
                            <p class="card-text">{{ rdv.creneau.title }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
 {% endblock %}
