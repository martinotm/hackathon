{% extends 'base.html.twig' %}

{% block title %}Rdv index{% endblock %}

{% block body %}
    <h1>Rdv index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>IsActive</th>
                <th>RdvOrder</th>
                <th>Message</th>
                <th>Adress</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rdv in rdvs %}
            <tr>
                <td>{{ rdv.id }}</td>
                <td>{{ rdv.date ? rdv.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rdv.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ rdv.rdvOrder }}</td>
                <td>{{ rdv.message }}</td>
                <td>{{ rdv.adress }}</td>
                <td>
                    <a href="{{ path('rdv_show', {'id': rdv.id}) }}">show</a>
                    <a href="{{ path('rdv_edit', {'id': rdv.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rdv_new') }}">Create new</a>
{% endblock %}
